<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="jumbotron">
  <h1>It's Burger Time!</h1>
 </div>

<div class="row">
  <div class="col-sm-6">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Ready to eat!</h2>
      </div>

      <div class="panel-body">
        <ul>
          {{#each burger}}
              {{#unless this.devoured}}

              <li>{{this.burger_name}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="burgerID" value="{{this.id}}">
                    <button type="submit">eat</button>
                </form>
              </li>


            {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="col-sm-6">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Already eaten!</h2>
      </div>

      <div class="panel-body">
        <ul>
          {{#each burger}}
              {{#if this.devoured}}
                <p>{{this.burger_name}}</p>

            {{/if}}
          {{/each}}

        </ul>
      </div>
    </div>
  </div>  

</div>


<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Add a burger</h2>
  </div>

  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label>burger name:</label>
      </br>
      <input type="text" name="newBurgerName">
    </div>

    <button type="submit">Add burger</button>
  </form>
</div>